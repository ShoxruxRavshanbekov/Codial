<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shapeable_background_for_change_language">

    <TextView
        android:id="@+id/language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar_style_for_dialog"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="@string/tilni_tanlang"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language">

        <ImageView
            android:id="@+id/uzbek"
            android:layout_width="80dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_uzbekistan"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/russian"
            android:layout_width="80dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_russian"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/english"
            android:layout_width="80dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_usa"
            app:layout_constraintVertical_bias="0" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>