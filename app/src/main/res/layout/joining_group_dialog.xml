<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/check_number_dialog_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/joining_an_exist_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/mavjud_guruhlarga_qo_shilish"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D1D0D0" />

        <TextView
            android:id="@+id/joining_a_new_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="@string/yangi_guruhga_qo_shilish"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</LinearLayout>